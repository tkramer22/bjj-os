# BJJ OS - Environment Variables Template
# Copy this file to .env for local development
# Add these same variables to Vercel for production deployment

# Anthropic AI (Claude) - for BJJ technique curation
ANTHROPIC_API_KEY=sk-ant-api03-xxxxx

# Twilio - for SMS sending and receiving
TWILIO_ACCOUNT_SID=ACxxxxx
TWILIO_AUTH_TOKEN=xxxxx
TWILIO_PHONE_NUMBER=+1234567890

# YouTube API - for video discovery and analysis
YOUTUBE_API_KEY=AIzaSyxxxxx

# Database - PostgreSQL connection string
# Format: postgresql://username:password@host:port/database
# Examples:
#   - Neon: postgresql://user:pass@ep-xxx.us-east-2.aws.neon.tech/neondb
#   - Supabase: postgresql://postgres:pass@db.xxx.supabase.co:5432/postgres
#   - Vercel Postgres: postgres://default:pass@xxx.postgres.vercel-storage.com:5432/verceldb
DATABASE_URL=postgresql://user:password@host:5432/database

# Admin Dashboard - password for /admin/* routes
ADMIN_PASSWORD=your_secure_admin_password

# Session Management - secret for session encryption
SESSION_SECRET=your_random_session_secret_minimum_32_chars

# Optional: Stripe (if implementing paid subscriptions)
# STRIPE_SECRET_KEY=sk_test_xxxxx
# STRIPE_PUBLISHABLE_KEY=pk_test_xxxxx

# Node Environment (automatically set by Vercel)
NODE_ENV=production
